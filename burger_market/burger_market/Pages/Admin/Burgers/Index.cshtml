@page
@model burger_market.Admin.Burgers.IndexModel

@{
    ViewData["Title"] = "Admin Burgers";
}

<h1>Administration de Burgers</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Burger[0].nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Burger[0].prix)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Burger[0].vegetarienne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Burger[0].ingredients)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Burger) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vegetarienne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ingredients)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BurgerID">Modifier</a> |
                <a asp-page="./Delete" asp-route-id="@item.BurgerID">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
